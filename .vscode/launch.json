        "cargo": {
            "args": [
                "run",
                "--example=twenty_twenty",
            ]
        },
        "args": ["1", "2"],
        "cwd": "${workspaceFolder}"

    },
    

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'advent-of-code'",
            "cargo": {
                "args": [
                    "run",
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": ["1", "2"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'advent-of-code'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent-of-code",
                    "--package=advent-of-code"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
